<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyButton.Primary">
        <item name="android:background">@drawable/button_rounded</item>
    </style>

    <style name="MyButton.Secondary">
        <item name="android:background">@drawable/button_rounded_secondary</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="MyFloatingElement">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="MyFloatingElement.BottomEnd">
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="MyFloatingElement.Center">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="MyEditText">
        <item name="android:padding">9dp</item>
        <item name="android:background">@drawable/edit_text_custom_secondary</item>
    </style>

    <style name="MyEditText.Drawable">
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="MyEditText.Drawable.Age">
        <item name="android:drawableStart">@drawable/ic_baseline_edit_calendar_24</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="MyEditText.Drawable.Person">
        <item name="android:drawableStart">@drawable/ic_baseline_person_24</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="MyEditText.Drawable.Email">
        <item name="android:drawableStart">@drawable/ic_baseline_alternate_email_24</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="MyEditText.Drawable.Password">
        <item name="android:drawableStart">@drawable/ic_baseline_lock_24</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTextView">
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyTextView.Text">
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTextView.Text.Medium">
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyTextView.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/days_one_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTextView.Title.Medium">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorGreyText</item>

    </style>

    <style name="MyTextView.Title.Medium.Dark">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorGreyPrimary</item>

    </style>

    <style name="MyTextView.Title.Small">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorGreyText</item>
    </style>

</resources>